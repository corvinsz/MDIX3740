<Window x:Class="MDIX3740.MyCustomWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:MDIX3740"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="MyCustomWindow"
        Width="800"
        Height="450"
        Style="{StaticResource MaterialDesignWindow}"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d">
    <Grid>
        <ToggleButton Margin="2"
                      IsChecked="{Binding SomeBoolBinding, Mode=TwoWay}"
                      Style="{DynamicResource MaterialDesignSwitchToggleButton}"
                      ToolTip="Something" />
    </Grid>
</Window>
